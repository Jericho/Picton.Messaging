{
	"buildOptions": {
		"additionalArguments": [
			"/ruleset:../Picton.Messaging.ruleset",
			"/additionalfile:../stylecop.json"
		],
		"compile": {
		},
		"emitEntryPoint": false,
		"platform": "anycpu",
		"xmlDoc": true
	},

	"configurations": {
		"Release": {
			"buildOptions": {
				"warningsAsErrors": true
			}
		}
	},

	"dependencies": {
		"LibLog": "4.2.6",
		"Picton": "2.0.0",
		"StyleCop.Analyzers": {
			"version": "1.1.0-beta003",
			"type": "build"
		}
	},

	"frameworks": {
		"netstandard1.6": {
			"buildOptions": {
				"define": [ "NETSTANDARD", "LIBLOG_PORTABLE" ]
			},
			"dependencies": {
				"NETStandard.Library": "1.6.1",
				"System.Reflection.TypeExtensions": "4.3.0",
				"System.Runtime.Loader": "4.3.0"
			},
			"imports": "dnxcore50"
		},
		"net452": {
			"dependencies": {
			},
			"buildOptions": {
				"define": [ "NETFULL", "LIBLOG_PORTABLE" ]
			}
		}
	},

	"version": "1.0.0-*"
}
